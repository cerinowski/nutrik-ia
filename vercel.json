{
  "version": 2,
  "cleanUrls": true,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/webhook/stripe",
      "destination": "/api/index.js"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/chat",
      "destination": "/public/chat.html"
    },
    {
      "source": "/plans",
      "destination": "/public/plans.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ]
}